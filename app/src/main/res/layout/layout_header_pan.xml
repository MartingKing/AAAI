<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="时"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="日"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="月"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="年"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shigan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="甲"
                android:textColor="@color/colorTextBlack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/rigan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="甲"
                android:textColor="@color/colorTextBlack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/yuegan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="甲"
                android:textColor="@color/colorTextBlack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/niangan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="甲"
                android:textColor="@color/colorTextBlack"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shizhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="甲"
                android:textColor="@color/colorTextBlack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/rizhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="甲"
                android:textColor="@color/colorTextBlack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/yuezhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="甲"
                android:textColor="@color/colorTextBlack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/nianzhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_0"
                android:gravity="center"
                android:text="甲"
                android:textColor="@color/colorTextBlack"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_ju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盾:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_xunshou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旬首:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_zhifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="值符:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_zhishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="值使:"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时家奇门拆解法"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>